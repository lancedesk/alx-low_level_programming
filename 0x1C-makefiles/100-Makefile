# Makefile for school executable

# Compiler
CC = gcc

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Source files
SRC = main.c school.c

# Object files
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Program to delete files
RM = rm -f

# Rules
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME) $(CFLAGS)

# Compile source files to object files
%.o: %.c
	$(CC) -c $< -o $@ $(CFLAGS)

# Clean rule
clean:
	$(RM) *~ $(NAME)

# Oclean rule
oclean:
	$(RM) $(OBJ)

# Fclean rule
fclean: clean oclean
	$(RM) $(NAME)

# Re rule
re: fclean all

# Ensure m.h exists
$(SRC): m.h

# Phony targets to prevent conflicts with file names
.PHONY: all clean oclean fclean re
